# Service Configuration
NODE_ENV=development
PORT=3200
SERVICE_NAME=svc-email

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/ewh

# Redis (for Bull queues and caching)
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-jwt-secret-here

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourcompany.com
SENDGRID_FROM_NAME=Your Company

# Gmail API (for OAuth2)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3200/api/email/oauth/google/callback

# Microsoft Graph API (for Outlook)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=http://localhost:3200/api/email/oauth/microsoft/callback

# Webhook Security
WEBHOOK_SECRET=your-webhook-secret-for-hmac

# File Upload
MAX_ATTACHMENT_SIZE_MB=25
UPLOAD_DIR=/tmp/email-attachments

# Cold Email Settings
COLD_EMAIL_DEFAULT_DAILY_LIMIT=500
COLD_EMAIL_MIN_DELAY_SECONDS=30
COLD_EMAIL_MAX_DELAY_SECONDS=120

# API Gateway
API_GATEWAY_URL=http://localhost:5000

# WebSocket
WS_PORT=3201
