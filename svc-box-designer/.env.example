# Service Configuration
NODE_ENV=development
PORT=5850
SERVICE_NAME=svc-box-designer

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ewh_platform
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false

# Redis (for job queues)
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Authentication
JWT_SECRET=your-jwt-secret-here

# Service URLs
SHELL_URL=http://localhost:3000
API_GATEWAY_URL=http://localhost:4000
DAM_SERVICE_URL=http://localhost:5100
CRM_SERVICE_URL=http://localhost:6200
APPROVALS_SERVICE_URL=http://localhost:5950

# Export Settings
EXPORT_TEMP_DIR=/tmp/box-exports
EXPORT_MAX_FILE_SIZE_MB=50

# Nesting Defaults
DEFAULT_NESTING_SPACING_MM=5
DEFAULT_SAFETY_MARGIN_MM=10

# Pricing Defaults
DEFAULT_MARKUP_MULTIPLIER=1.3
DEFAULT_SETUP_COST=50

# Limits
MAX_PROJECTS_PER_TENANT=100
MAX_EXPORT_QUEUE_SIZE=50
MAX_DIMENSION_MM=3000

# Logging
LOG_LEVEL=info
