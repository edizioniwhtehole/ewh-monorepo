# Server Configuration
NODE_ENV=development
PORT=4640
WS_PORT=4641

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/ewh_master

# Redis
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-jwt-secret-here

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_API_KEY=your-twilio-api-key
TWILIO_API_SECRET=your-twilio-api-secret
TWILIO_TWIML_APP_SID=your-twiml-app-sid

# Phone Numbers
TWILIO_DEFAULT_FROM_NUMBER=+1234567890

# OpenAI Configuration (for transcription)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=whisper-1

# Storage (for recordings and voicemails)
STORAGE_TYPE=s3
S3_BUCKET=ewh-voice-recordings
S3_REGION=us-east-1
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key

# MinIO (alternative to S3)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=voice-recordings

# Webhooks
WEBHOOK_BASE_URL=https://your-domain.com
WEBHOOK_SECRET=your-webhook-secret

# Recording Configuration
AUTO_RECORD_CALLS=true
RECORDING_MAX_DURATION_SECONDS=3600
AUTO_TRANSCRIBE=true

# IVR Configuration
IVR_DEFAULT_LANGUAGE=en-US
IVR_DEFAULT_VOICE=Polly.Joanna

# Rate Limiting
RATE_LIMIT_CALLS_PER_MINUTE=10
RATE_LIMIT_CALLS_PER_HOUR=100

# Firebase (for mobile push notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# APNS (Apple Push Notification Service)
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
APNS_BUNDLE_ID=com.ewh.phone

# Feature Flags
ENABLE_AI_TRANSCRIPTION=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_CALL_RECORDING=true
ENABLE_IVR=true
